-# navigation styled for Zurb Foundation 5
-# the syntax for data-topbar may need to change for Zurb Foundation 5
.contain-to-grid
  %nav.top-bar{"data-topbar" => true, "data-options"=>"is_hover: false"}
    %ul.title-area
      %li.name{:style => 'position:relative;z-index:1000;'}
        = link_to 'ARiA System', root_path
      %li.toggle-topbar.menu-icon
        %a{:href => "#"}
          Menu
    .top-bar-section
      %ul.right
        = render 'layouts/navigation_links'
      %ul.left
        %li
          = link_to 'About', about_path
